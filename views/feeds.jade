extends layout
block content
  .container
    .well
      | Your PUBLIC dashboard link is
      a(href="#{host}/dashboard/#{user.p('dashboard_udid')}")  #{host}/dashboard/#{user.p('dashboard_udid')}
  .container
    .row
      for feed in feeds
        .span4
          .well.feed(class="feed-resolved-#{feed.p('resolved')}")
            h2
              if feed.p('resolved')
                i.icon-ok
              else
                i.icon-warning-sign
              |  #{feed.p('name')}
            form(method='POST',action='/feeds/#{feed.id}')
              div.status-description
                textarea(name='body',rows=3,placeholder='Message (e.g. We are investigating problems with DNS)').input-block-level
              div.status-buttons
                button.btn.btn-danger(name='status',value='error',type='submit') Escalate
                button.btn.btn-success(name='status',value='resolved',type='submit').pull-right Resolve
            .messages
              ol.unstyled
                for message in feed.messages
                  li
                    if message.p('resolved')
                      .label.label-success
                        i.icon-ok.icon-white
                    else
                      .label.label-important
                        i.icon-warning-sign
                    |  #{message.p('body')}
                    span.muted
                      |  (
                      time.muted(datetime=new Date(message.p('created_at')).toISOString())= new Date(message.p('created_at')).toLocaleString()
                      | )

      .span4
        .well.feed.center
          form(method='POST',action='/feeds')
            h2 New Project
            .input-append
              input(type='text',name='name',placeholder='name',required).input-small
              button.btn.btn-success(name='create',value='create',type='submit') Create
