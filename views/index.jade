extends layout

block content
  .container
    .hero-unit
      h1 Keep Up
      p When everything goes wrong, make sure you can communicate with your customers.
    .row-fluid
      .span4.offset4.center
        if user
          a(href='/feeds').btn.btn-large.btn-success Continue to feeds
        else
          form(method='POST',action='/')
            .input-append
              input(type='email',placeholder='Your Email',name='email',required)
              button.btn.btn-success(type='submit') Sign up
        img(src="/images/screenshot.png").img-rounded

  .container
    .row-fluid
      .span4
        h2
          i.icon-info-sign
          |  Public Dashboard
        p A nice looking dashboard for your customers.
      .span4
        h2
          i.icon-cloud
          |  Separate
        p Statusus is hosted far away from your own infrastructure
      .span4
        h2
          i.icon-envelope
          |  Notifications (soon)
        p Notify everyone when things go wrong. Or right!
