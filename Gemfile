source 'https://rubygems.org'

gem 'rails', '~> 3.2.12'

## Models
gem 'mysql2'
gem 'devise'

## Views
gem 'slim'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'therubyracer'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'less-rails'

group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'bullet'
  gem 'quiet_assets'
  gem 'kensa'
end

gem 'capistrano'
gem 'unicorn'
